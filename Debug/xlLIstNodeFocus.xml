<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<Window size="800,120">
    <ListContainerElement name="my_list_node_focus" height="120">
        <HorizontalLayout >
            <HorizontalLayout padding="20,20,20,20">
                <!-- 文件类型图标 -->
                <VerticalLayout width="80">
                    <Control name="filetypeImage" width = "40" height = "40" bkimage="image.png" />
                </VerticalLayout>
                <VerticalLayout >
                    <!-- 文件名称和文件大小  -->
                    <VerticalLayout height="40" padding="5,0,0,0">
                        <Label name="fileName" height="15" text="fileName" />
                        <HorizontalLayout height="15">
                            <Label name="fileSize" text="fileSize" />
                        </HorizontalLayout>
                    </VerticalLayout>
                    <VerticalLayout height="40">
                        <HorizontalLayout inset="0,0,2,0" height="20">
                            <Control name="circle1" height="15" width="15" bkimage="circle.png" padding="1,1,5,1" />
                            <Label name="text1" height="15" text="高速通道可大幅提高下载速度" align="left" valign="center" />
                        </HorizontalLayout>
                        <HorizontalLayout inset="0,0,2,0" height="20">
                            <Control name="circle2" height="15" width="15" bkimage="circle.png" padding="1,1,5,1" />
                            <Label name="text2" height="15" text="离线下载可代你挂机" align="left" valign="center" />
                        </HorizontalLayout>
                    </VerticalLayout>
                </VerticalLayout>
            </HorizontalLayout>
        </HorizontalLayout>
    </ListContainerElement>
</Window>
